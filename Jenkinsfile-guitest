pipeline {
  agent {
    // this image provides everything needed to run Cypress
    docker {
      image 'cypress/base:10'
    }
  }
  environment {
      HOME="${env.WORKSPACE}"
  }
  stages {
      stage('build and test') {
        steps {
            dir('testing/cypress'){
              sh 'npm ci'
              sh 'npm install cypress'
              sh 'npx cypress run'
          }
        }
      }
   }
}
